const express = require('express');
const cors = require('cors');
const app = express();
const PORT = 3000;

// Middlewares
app.use(cors());
app.use(express.json());

// Middleware de log
app.use((req, res, next) => {
    console.log(`üìç ${new Date().toISOString()} - ${req.method} ${req.url}`);
    next();
});

// Rota de TESTE
app.get('/api/teste', (req, res) => {
    res.json({ 
        message: 'üöÄ Backend da Biblioteca funcionando!',
        data: new Date().toISOString()
    });
});

// Rotas da API
app.use('/api/livros', require('./routes/livros'));
app.use('/api/usuarios', require('./routes/usuarios'));
app.use('/api/emprestimos', require('./routes/emprestimos'));

// Rota padr√£o
app.get('/', (req, res) => {
    res.json({
        message: 'Bem-vindo √† API da Biblioteca!',
        endpoints: {
            teste: 'GET /api/teste',
            livros: 'GET /api/livros',
            livrosDisponiveis: 'GET /api/livros/disponiveis',
            cadastrarLivro: 'POST /api/livros',
            usuarios: 'GET /api/usuarios',
            emprestimos: 'GET /api/emprestimos',
            emprestimosAtivos: 'GET /api/emprestimos/ativos'
        }
    });
});

// Iniciar servidor
app.listen(PORT, () => {
    console.log('===================================');
    console.log('üìö SISTEMA BIBLIOTECA - BACKEND');
    console.log('===================================');
    console.log(`‚úÖ Servidor rodando na porta ${PORT}`);
    console.log(`üåê Acesse: http://localhost:${PORT}`);
    console.log('===================================');
});
